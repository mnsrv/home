<%= form_tag sessions_path do %>
    <p>
      <%= label_tag :email, 'Электронная почта:' %><br />
      <%= email_field_tag :email, params[:email] %>
    </p>
    <p>
      <%= label_tag :password, 'Пароль:' %><br />
      <%= password_field_tag :password %>
    </p>
    <p><%= submit_tag "Войти" %></p>
<% end %>